<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Chess_API</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true"/>
</head>
<body class="bg-slate-800">
<header>
    <nav class="navbar bg-white">
        <div class="p-2 w-screen mb-3 flex items-center justify-center border-b-2 border-black">
            <a class="p-1 font-mono text-2xl font-bold hover:underline rounded-lg border-sky-500 transition-all duration-500 hover:border-[1px] decoration-2 decoration-sky-500 decoration-dotted underline-offset-2" asp-area="" asp-controller="Home" asp-action="Index">Chess_API</a>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<footer class="w-screen absolute bottom-0 left-0">
    <div class="bg-white rounded-lg shadow m-4">
        <div
            class="w-full mx-auto max-w-screen-xl p-4 grid grid-cols-1 justify-items-center sm:flex sm:items-center sm:justify-between">
            <span class="text-sm text-gray-500 sm:text-center">
                © 2023 - <a asp-area="" asp-controller="Home" asp-action="Index" class="hover:underline">Chess_API</a>. All Rights Reserved.
            </span>
            <ul
                class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 sm:mt-0">
                <li>
                    <a class="hover:underline me-4 md:me-6" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
            </ul>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>